<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= raw @post.body %>
</p>

<% if user_signed_in? %>
  <% if @post.user_id == current_user.id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to "Delete", post_path(@post.id), method: :delete, data: {confirm: "Are you sure?"} %> |
<%= link_to 'Back', posts_path %>
  <% end %>
<% end %>
